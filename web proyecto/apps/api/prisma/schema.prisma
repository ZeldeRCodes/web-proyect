generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  passwordHash  String
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  preferences   UserPreference[]
  tierLists     TierList[]
  reactions     Reaction[]
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  tierLists TierList[]
}

model TierList {
  id          String     @id @default(uuid())
  title       String
  description String?
  authorId    String
  author      User       @relation(fields: [authorId], references: [id])
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])
  published   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  items       TierItem[]
  reactions   Reaction[]
}

model TierItem {
  id         String   @id @default(uuid())
  tierListId String
  tierList   TierList @relation(fields: [tierListId], references: [id])
  label      String
  rank       Int
}

model Reaction {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  tierListId String
  tierList   TierList @relation(fields: [tierListId], references: [id])
  type       ReactionType
  createdAt  DateTime @default(now())
  @@unique([userId, tierListId])
}

enum ReactionType {
  LIKE
  DISLIKE
}

model UserPreference {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  score      Float    @default(0)
  updatedAt  DateTime @updatedAt
  @@unique([userId, categoryId])
}
